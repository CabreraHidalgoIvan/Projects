{% extends 'base.html.twig' %}

{% block title %}EstadoTarea index{% endblock %}

{% block body %}
    <h1>Listado de Estados</h1>

    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for estado_tarea in estado_tareas %}
            <tr>
                <td>{{ estado_tarea.id }}</td>
                <td>{{ estado_tarea.nombre }}</td>
                <td>{{ estado_tarea.descripcion }}</td>
                <td>
                    <a href="{{ path('app_estado_tarea_show', {'id': estado_tarea.id}) }}" class="btn btn-info">show</a>
                    <a href="{{ path('app_estado_tarea_edit', {'id': estado_tarea.id}) }}" class="btn btn-primary">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_estado_tarea_new') }}" class="btn-new">Nuevo</a>
{% endblock %}
